<UserControl x:Class="VirtualDoctor.Shared.Controls.VirtualAssistantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualDoctor.Shared.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel x:Name="AssistantContainter" HorizontalAlignment="Center" Height="100"  VerticalAlignment="Center" Width="100" >
        <Border x:Name="AssistantBorder" Height="80">
            <Image Source="/Shared/Images/VirtualAssistant.png" Stretch="UniformToFill"></Image>
        </Border>
        <TextBlock TextAlignment="Center">
         <Hyperlink x:Name="AssistantLink" Foreground="White">      
             <Hyperlink.Inlines>
                <Run Text="Virtual Assistant" x:Name="LinkText"/>
             </Hyperlink.Inlines>
        </Hyperlink>
        </TextBlock>
    </StackPanel>

</UserControl>
