<UserControl x:Class="VirtualDoctor.Shared.Controls.GoBackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VirtualDoctor.Shared.Controls"
             mc:Ignorable="d"            >
    <Button x:Name="GoBackButton" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Background="#7d9e7f" Click="GoBackButton_Click">
        <StackPanel x:Name="GoBackStackPanel" Height="24" Width="143" Orientation="Horizontal">
            <Image Source="/Shared/Images/GoBack.png"/>
            <Rectangle Width="14" />
            <TextBlock x:Name="GoBackText" Width="101" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontWeight="Bold" Height="24" Text="Go back"/>
        </StackPanel>
    </Button>
</UserControl>
